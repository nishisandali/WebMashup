extends layout

block append content
    .row
        .column-75
            #map
        .column-25
            #google_translate_element
            script(type='text/javascript', src='//translate.google.com/translate_a/element.js?cb=googleTranslateElementInit')
            .container
                #info-content
                    table
                        tbody
                            tr.iw_table_row
                                td.iw_attribute_name Restaurant Name:
                                td#iw-name=det[0].RestaurantName
                            tr.iw_table_row
                                td.iw_attribute_name Distance from Brisbane:
                                td#iw-distance=dis.ResDistance
                            tr.iw_table_row
                                td.iw_attribute_name Duration:
                                td#iw-duration=dis.ResDuration
                            tr.iw_table_row
                                td.iw_attribute_name Origin:
                                td#iw-origin=dis.MyOrigin
                            tr.iw_table_row
                                td.iw_attribute_name Destination:
                                td#iw-destination=dis.ResDestination
                            tr.iw_table_row
                                td.iw_attribute_name Transportation Mode:
                                td#iw-website=dis.DriveMode
                            tr.iw_table_row
                                td.iw_attribute_name Reviews:
                                td#iw-rating=det[0].RestaurantRatext
                            tr.iw_table_row
                                td.iw_attribute_name Weather Forecast:
                                td#iw-weather=weather[0].WeatherDes
                            tr.iw_table_row
                                td.iw_attribute_name Current Temperature:
                                td#iw-curr-temp=weather[0].CurrentTemp + ' C'
                            tr.iw_table_row
                                td.iw_attribute_name Humidity:
                                td#iw-origin=weather[0].Humidity + '%'
                            tr.iw_table_row
                                td.iw_attribute_name Minimum Temperature:
                                td#iw-destination=weather[0].MinTemp + ' C'
                            tr.iw_table_row
                                td.iw_attribute_name Maximum Temperature:
                                td#iw-website=weather[0].MaxTemp + ' C'
                            tr.iw_table_row
                                td.iw_attribute_name Wind Speed:
                                td#iw-rating=weather[0].WindSpeed + ' kmh'
                            br
                            br
                            form(name='rd')
                                input#long(type='hidden', name='long', value=det[0].RestaurantLat)
                                input#lat(type='hidden', name='lat', value=det[0].RestaurantLon)

    script(src='https://maps.googleapis.com/maps/api/js?key=$APIKEY&callback=initiMap', async='', defer='')